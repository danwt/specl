// Test spec for tuple type support in symbolic mode.
// A pair of integers that increment together.
//
// Use: specl check %f -c N=5 --symbolic inductive

module TupleTest

const N: Int

var pair: (0..N, 0..N)

init {
    pair = (0, 0);
}

action Step() {
    require pair.0 < N;
    require pair.1 < N;
    pair = (pair.0 + 1, pair.1 + 1);
}

invariant PairEqual {
    pair.0 == pair.1
}

invariant PairBounded {
    pair.0 <= N and pair.1 <= N
}
