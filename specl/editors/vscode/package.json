{
  "name": "specl",
  "displayName": "Specl",
  "description": "Language support for Specl â€” a modern specification language and model checker for concurrent and distributed systems.",
  "version": "0.1.2",
  "publisher": "specl",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/danwt/specl"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "specl",
    "tla+",
    "model checking",
    "formal verification",
    "specification"
  ],
  "activationEvents": [
    "onLanguage:specl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "specl",
        "aliases": [
          "Specl",
          "specl"
        ],
        "extensions": [
          ".specl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "specl",
        "scopeName": "source.specl",
        "path": "./syntaxes/specl.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "specl.restartServer",
        "title": "Specl: Restart Language Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Specl",
      "properties": {
        "specl.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to specl-lsp binary. If empty, searches PATH."
        },
        "specl.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "bundle": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0",
    "esbuild": "^0.20.0"
  }
}
